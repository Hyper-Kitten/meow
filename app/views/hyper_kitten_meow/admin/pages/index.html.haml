%section.pages
  .d-flex.justify-content-between
    %h2 Pages
    .action
      = link_to "Add New", hyper_kitten_meow.new_admin_page_path, class: "btn btn-primary"
  %table.table
    %thead
      %tr
        %th Title
        %th Slug
        %th Manage
    %tbody
      - @pages.each do |page|
        %tr.page{class: "align-middle"}
          %td= page.title
          %td= page.slug
          %td= link_to "Edit", hyper_kitten_meow.edit_admin_page_path(page), class: "btn btn-sm btn-outline-info"
  != pagy_bootstrap_nav(@pagy)
