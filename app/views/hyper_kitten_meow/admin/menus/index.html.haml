%section.posts
  .d-flex.justify-content-between
    %h2 Menus
    .action
      = link_to "Add New", hyper_kitten_meow.new_admin_menu_path, class: "btn btn-primary"
  = table(collection: @menus) do |t|
    - t.td :name, sortable: false
    - t.td :slug, sortable: false
    - t.td :actions, sortable: false do |menu|
      .btn-group
        = link_to "Edit", hyper_kitten_meow.edit_admin_menu_path(menu), class: "btn btn-sm btn-outline-info"
        = link_to "Delete", hyper_kitten_meow.admin_menu_path(menu), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger"
    - t.footer do
      != pagy_bootstrap_nav(@pagy)
