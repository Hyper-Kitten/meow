%h1.mb-4 Posts

- if @posts.any?
  .row
    - @posts.each do |post|
      .col-12.mb-4
        .card
          .card-body
            %h2.card-title= link_to post.title, post_path(post.slug), class: "text-decoration-none"
            %p.text-muted.small
              Published #{time_ago_in_words(post.published_at)} ago
              - if post.tags.any?
                |
                = post.tags.map(&:name).join(", ")
            - if post.summary.present?
              %p.card-text= post.summary
            = link_to "Read more â†’", post_path(post.slug), class: "btn btn-outline-primary btn-sm"

  - if @pagy.pages > 1
    .d-flex.justify-content-center
      != pagy_bootstrap_nav(@pagy)
- else
  .alert.alert-info No posts yet.

