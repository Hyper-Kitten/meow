%section.pages
  .d-flex.justify-content-between
    %h2 Pages
    .action
      = link_to "Add New", hyper_kitten_meow.new_admin_page_path, class: "btn btn-primary"
  = table(collection: @pages) do |t|
    - t.td :title, sortable: false
    - t.td :slug, sortable: false
    - t.td :actions, sortable: false do |page|
      = link_to "Edit", hyper_kitten_meow.edit_admin_page_path(page), class: "btn btn-sm btn-outline-info"
    - t.footer do
      != pagy_bootstrap_nav(@pagy)
