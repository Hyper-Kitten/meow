%section.tags
  .d-flex.justify-content-between
    %h2 Tags
    .action
      = link_to "Add New", hyper_kitten_meow.new_admin_tag_path, class: "btn btn-primary"
  = table(collection: @tags) do |t|
    - t.td :label, sortable: false
    - t.td "Actions", sortable: false do |tag|
      .input-group
        = link_to "Edit", edit_admin_tag_path(tag), class: "btn btn-sm btn-outline-info"
        = button_to "Delete", admin_tag_path(tag), method: :delete, class: "btn btn-sm btn-outline-danger", form_class: "d-inline"
    - t.footer do
      != pagy_bootstrap_nav(@pagy)
