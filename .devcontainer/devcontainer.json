{
  "name": "Docker Compose (Multiple Services)",

  // Update the 'dockerComposeFile' list if you have more compose files or use different names.
  "dockerComposeFile": "docker-compose.yml",

  // The 'service' property is the name of the service for the container that VS Code should
  // use. Update this value and .devcontainer/docker-compose.yml to the real service name.
  "service": "web",

  "runServices": ["db"],

  // The 'workspaceFolder' property is the path VS Code should open by default when
  // connected. Corresponds to a volume mount in .devcontainer/docker-compose.yml
  "workspaceFolder": "/app",

  // Set *default* container specific settings.json values on container create.
  "customizations": {
    "settings": {},

    // Add the IDs of extensions you want installed when the container is created.
    "extensions": []
  },

  // Forward the Rails server port
  "forwardPorts": [3000],

  // Run database setup after container is created
  "postCreateCommand": "cd /app/spec/dummy && bin/rails db:prepare",

  // Start the Rails server when the container starts
  "postStartCommand": "cd /app/spec/dummy && bin/rails server -b 0.0.0.0"
}
