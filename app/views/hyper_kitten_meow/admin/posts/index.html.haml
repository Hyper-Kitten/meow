%section.posts
  .d-flex.justify-content-between
    %h2 Posts
    .action
      = link_to "Add New", hyper_kitten_meow.new_admin_post_path, class: "btn btn-primary"
  = table(collection: @posts) do |t|
    - t.td :title, sortable: false
    - t.td "Article", sortable: false do |post|
      = truncate(post.summary, length: 40, separator: ' ')
    - t.td "Author", sortable: false do |post|
      = post.user.name
    - t.td :slug, sortable: false
    - t.td "Tags", sortable: false do |post|
      = post.tags.to_a.to_sentence
    - t.td :actions, sortable: false do |post|
      = link_to "Edit", hyper_kitten_meow.edit_admin_post_path(post), class: "btn btn-sm btn-outline-info"
    - t.footer do
      != pagy_bootstrap_nav(@pagy)
